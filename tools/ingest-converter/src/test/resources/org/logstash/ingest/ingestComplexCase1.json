{
  "description": "Pipeline to parse Apache logs",
  "processors": [
    {
      "grok": {
        "field": "message",
        "patterns": [
          "%{COMBINEDAPACHELOG}"
        ]
      }
    },
    {
      "date": {
        "field": "timestamp",
        "target_field": "@timestamp",
        "formats": [
          "dd/MMM/YYYY:HH:mm:ss Z"
        ],
        "locale": "en"
      }
    },
    {
      "geoip": {
        "field": "client.ip",
        "target_field": "geo"
      }
    },
    {
      "convert": {
        "field" : "bytes",
        "type": "integer"
      }
    },
    {
      "append": {
        "field" : "response_code",
        "value": ["200", "400", "503"]
      }
    },
    {
      "json": {
        "field": "string_source"
      }
    }
  ]
}
