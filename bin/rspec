#!/bin/sh

unset CDPATH
. "$(cd `dirname $0`/..; pwd)/bin/logstash.lib.sh"
setup

# use faster starting JRuby options see https://github.com/jruby/jruby/wiki/Improving-startup-time
export JRUBY_OPTS="${JRUBY_OPTS---dev}"

for arg in "$@"; do
  case "$arg" in
    x-pack/*|*/x-pack/*) LOGSTASH_XPACK=1; break ;;
  esac
done

LOGSTASH_XPACK="$LOGSTASH_XPACK" ruby_exec "${LOGSTASH_HOME}/lib/bootstrap/rspec.rb" "$@"
